@model Phongkham.Models.THUOC

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_MedicalRecordLayout.cshtml";
}

<script src="~/Scripts/script.js"></script>
<link href="~/Content/don.css" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
<style>

    .field-validation-error {
        color: red;
    }

    .tsx {
        color: var(--black);
        font-size: 2.5rem;
        padding: 1rem 0;
    }

    .ten {
        color: var(--ligt-color);
        font-size: 2.5rem;
        padding: 1rem 0;
        text-decoration: none;
    }
    body{
        padding:0;
    }
</style>



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal">
        <div class="book" id="book">
            <h1 class="heading">KHO <span>THUỐC</span></h1>


            <div class="row">
                <div class="form">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <h3>Nhập thuốc</h3>
                    @Html.EditorFor(model => model.TenThuoc, new { htmlAttributes = new { @class = "box", @type = "text", @placeholder = "Thuốc", style = "field-validation-error" } })
                    @Html.ValidationMessageFor(model => model.TenThuoc, "", new { @class = "text-danger" })
                    <br />
                    @Html.EditorFor(model => model.SoLuong, new { htmlAttributes = new { @class = "box", @type = "number", @placeholder = "Số lượng", style = "field-validation-error" } })
                    @Html.ValidationMessageFor(model => model.SoLuong, "", new { @class = "text-danger" })
                    <br />

                    <input type="submit" value="Thêm thuốc" class="btn">

                </div>


            </div>

        </div>
    </div>
}



