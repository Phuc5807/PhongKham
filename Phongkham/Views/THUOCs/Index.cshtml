@model IEnumerable<Phongkham.Models.THUOC>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MedicalRecordLayout.cshtml";
}

<style>
    .info .table .tsx td {
        padding-right: 14rem;
    }
</style>
<h1 class="heading">KHO <span>THUỐC</span></h1>
<div class="info">
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr class="ten">
            <th>
                Thuốc
            </th>
            <th>
                Số lượng
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TenThuoc)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SoLuong)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.MaThuoc }) |
                    @Html.ActionLink("Details", "Details", new { id = item.MaThuoc }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.MaThuoc })
                </td>
            </tr>
        }

    </table>
    </div>
