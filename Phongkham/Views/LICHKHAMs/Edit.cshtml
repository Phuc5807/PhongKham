                @Html.ValidationMessageFor(model => model.DichVu, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.NoteBN, htmlAttributes: new { @class = "control-label col-md-2" })
