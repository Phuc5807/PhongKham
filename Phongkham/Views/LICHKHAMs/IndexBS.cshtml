@model IEnumerable<Phongkham.Models.LICHKHAM>

@{
    ViewBag.Title = "IndexBS";
    Layout = "~/Views/Shared/_MasterLayout2.cshtml";
}

<script src="~/Scripts/script.js"></script>
<link href="~/Content/KHOA.css" rel="stylesheet" />
<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />
<style>
    .tsx {
        font-size: 1.7rem;
        color: var(--ligt-color);
        line-height: 1.8;
        padding: 1rem 0;
    }

    .ten {
        color: var(--black);
        font-size: 2.5rem;
    }

    .danhmuc {
        padding-right: 4rem;
    }
</style>
<h1 class="heading">LỊCH <span>KHÁM</span></h1>
@if (TempData["Message"] != null)
{
    <div class="alert alert-warning">
        @TempData["Message"]
    </div>
}

<table class="table">

    <tr class="ten">
        <th class="danhmuc">
            Ngày hẹn
        </th>
        <th class="danhmuc">
            Dịch vụ
        </th>
        <th class="danhmuc">
            Ghi chú (nếu có)
        </th>
        <th class="danhmuc">
            Bác sĩ phụ trách
        </th>
        <th class="danhmuc">
            Tên bệnh nhân
        </th>
        <th class="danhmuc">
            Tình trạng
        </th>
    </tr>


    @foreach (var item in Model)
    {
        <tr class="tsx">
            <td class="danhmuc">
                @Html.DisplayFor(modelItem => item.NgayHen)
            </td>
            <td class="danhmuc">
                @Html.DisplayFor(modelItem => item.DichVu)
            </td>
            <td class="danhmuc">
                @Html.DisplayFor(modelItem => item.NoteBN)
            </td>
            <td class="danhmuc">
                @Html.DisplayFor(modelItem => item.BACSI.TenBS)
            </td>
            <td class="danhmuc">
                @Html.DisplayFor(modelItem => item.BENHNHAN.TenBN)
            </td>
            <td class="danhmuc">
                @Html.DisplayFor(modelItem => item.TinhTrang)
            </td>
            
            @*<td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.IDKham }) |
                    @Html.ActionLink("Details", "Details", new { id = item.IDKham }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.IDKham })
                </td>*@
        </tr>
    }
</table>
