@model Phongkham.Models.LICHKHAM
@{
    ViewBag.Title = "Create1";
    Layout = "~/Views/Shared/PatientLayout.cshtml";
}
<script src="~/Scripts/script.js"></script>
<link href="~/Content/don.css" rel="stylesheet" />

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.15.4/css/all.css" />

@*--CSS Lịch hẹn*@
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

<link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.min.css" />
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="//cdnjs.cloudflare.com/ajax/libs/jquery-datetimepicker/2.5.20/jquery.datetimepicker.full.min.js"></script>

@*--//*@
<style>
    #main-content {
        display: flex;
        text-align: center;
        justify-content: center;
    }

    .tsx {
        font-size: 1.7rem;
        color: var(--black);
        line-height: 1.8;
        padding: 1rem 0;
    }

    .ten {
        color: var(--ligt-color);
        font-size: 2.5rem;
        padding: 1rem 0;
    }
</style>
<script>
    //--Lịch hẹn
    $(function () {
        $('.datetimepicker').datetimepicker({
            Format: 'Y-m-d H:i',
            minDate: 0
        });
    });
    //--
</script>
<div id="main-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal">
            <div class="book" id="book">
                <h1 class="heading"><span>ĐẶT </span>LỊCH</h1>
                <div class="row">
                    <div class="form">
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <h3>Đăng ký thông tin bệnh nhân</h3>
                        @Html.EditorFor(model => model.NgayHen, new { htmlAttributes = new { @class = "box", @type = "datetime-local", @placeholder = "Ngày hẹn", style = "field-validation-error" } })<br />
                        @Html.ValidationMessageFor(model => model.NgayHen, "", new { @class = "text-danger" })
                        <br />
                        @Html.DropDownListFor(model => model.DichVu, (SelectList)ViewBag.DichVuList, new { @class = "box" })
                        @Html.ValidationMessageFor(model => model.DichVu, "", new { @class = "text-danger" })
                        <br />
                        @Html.EditorFor(model => model.NoteBN, new { htmlAttributes = new { @class = "box", @type = "text", @placeholder = "Ghi chú (nếu có)", style = "field-validation-error" } })<br />
                        @Html.ValidationMessageFor(model => model.NoteBN, "", new { @class = "text-danger" })
                        <br />
                        @Html.DropDownListFor(model => model.MaBS, new SelectList(ViewBag.MaBS, "Value", "Text"), new { @class = "box", style = "field-validation-error" })<br />
                        @Html.ValidationMessageFor(model => model.MaBS, "", new { @class = "text-danger" })
                        <br />
                        <input type="submit" value="Đặt lịch" class="btn">
                    </div>
                </div>
            </div>
        </div>
    }

    @*<div class="ten">
            @Html.ActionLink("Back to List", "Index")
        </div>*@
</div>


